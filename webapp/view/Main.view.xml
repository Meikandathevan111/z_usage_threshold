<mvc:View xmlns:vh="sap.ui.mdc.filterbar.vh" xmlns:smartfield="sap.ui.comp.smartfield" 
 controllerName="com.sap.lh.mr.zusagethresholdbasic.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:f="sap.f" 
    xmlns:mdc="sap.ui.mdc"
    xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar" 
	>
    <f:DynamicPageHeader
       
    >
        <f:content>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad"
                filterContainerWidth="13rem"
                header="inLog"
            >
                <!-- <fb:filterGroupItems>
                    <fb:FilterGroupItem
                       name="Name"
                        label="{i18n>lhAMS}"
                       
                    >
                        <fb:control>
                            <Input
                                id="idCrtIntRec"   width="70%" editable="false"
                               
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems> -->
                    <fb:filterGroupItems>
                                <fb:FilterGroupItem name="Billing Analysis" 
								label="Billing Analysis" 
								groupName="Group1" 
								visibleInFilterBar="true">
                                    <fb:control>
                                        <Input
                                             id="idBillingAnalysisFrm" 
											 width="90%"  
											 showValueHelp="true"
											 value="{filters>/idBillingAnalysisFrm}"
                                        >
                                            <!-- <core:Item key="{key}" text="{name}"/> -->
                                        </Input>
                                        <!-- <Input
                                             id="idBillingAnalysisTo" 
											 width="70%"   
											 showValueHelp="true"
                                        >
                                            <core:Item key="{key}" text="{name}"/>
                                        </Input> -->
                                    </fb:control>
                                </fb:FilterGroupItem>
                                 <!-- <core:Title  /> -->
                                <fb:FilterGroupItem name="RateCategory " 
								label="RateCategory " 
								groupName="Group1" 
								visibleInFilterBar="true">
                                    <fb:control>
                                        <Input
                                         id="idRateCategoryFrm" 
										 width="90%"  
										 showValueHelp="true"
										 value="{filters>/idRateCategoryFrm}"
                                        >
                                            <!-- <core:Item key="{key}" text="{name}"/> -->
                                        </Input>
                                        <!-- <Input
                                         id="idRateCategoryTo" width="70%"  showValueHelp="true"
                                        >
                                            <core:Item key="{key}" text="{name}"/>
                                        </Input> -->
                                    </fb:control>
                                </fb:FilterGroupItem>
									<fb:FilterGroupItem 
										name="BillingPeriodMonthYear " 
										label="Billing Period (Month-Year Range) " 
										groupName="Group1" 
										visibleInFilterBar="true">
											<fb:control>
												<!-- <DateRangeSelection id="billingPeriodRange" width="90%" /> -->
												<!-- <Input
													id="idlhPeriodTo" width= "90%" showValueHelp="true"
												>
													<core:Item key="{key}" text="{name}"/>
												</Input> -->
                                           <DateRangeSelection
                                                id="billingPeriodRange"
                                                width="90%"
                                                displayFormat="MM-yyyy"
                                                valueFormat="yyyy-MM-dd"
                                                change="onBillingPeriodRangeChange"
                                                placeholder="MM-YYYY to MM-YYYY" />
                                                                                    
											</fb:control>
										</fb:FilterGroupItem>
										 <!-- Profile Ratio -->
										<fb:FilterGroupItem
											name="profileRation"
											label="Profile Ratio"
											groupName="Group1"
											visibleInFilterBar="true">
											<fb:control>
												<Input id="profileRatio" 
												width="90%" 
												showValueHelp="true"
												value="{filters>/profileRatio}" placeholder="e.g. 1000 - 2000" />
											</fb:control>
										</fb:FilterGroupItem>
										 <!-- Threshold -->
										<fb:FilterGroupItem
											name="threshold"
											label="Threshold"
											groupName="Group1"
											visibleInFilterBar="true">
											<fb:control>
												<Input 
												id="thresholdfrm" 
												width="90%" 
												showValueHelp="true"
												value="{filters>/thresholdfrm}" />
											</fb:control>
										</fb:FilterGroupItem>

										
                               
                            </fb:filterGroupItems>
						
            </fb:FilterBar>
        </f:content>
		<f:content>
        <core:Fragment
                fragmentName="com.sap.lh.mr.zusagethresholdbasic.fragment.items"
                type="XML"
            />
        </f:content>

    </f:DynamicPageHeader>
</mvc:View>